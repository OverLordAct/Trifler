<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.meshdesh.trifler">

    <application
        android:name=".TriflerApplication"
        android:allowBackup="true"
        android:icon="@drawable/main_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/main_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.Trifler">
        <activity
            android:name=".splash.view.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity
            android:name=".onboarding.view.OnboardingActivity"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>