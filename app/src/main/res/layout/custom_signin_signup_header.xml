<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/module_30"
        android:layout_marginTop="@dimen/module_30"
        android:src="@drawable/ic_main_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/primaryButton"
        style="@style/SignInOutHeaderButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/module_30"
        app:cornerRadius="@dimen/module_999"
        app:layout_constraintBottom_toBottomOf="@id/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/logo"
        tools:text="Sign In" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/title"
        style="@style/T32RadicalRedBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/module_57"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo"
        tools:text="Create Account" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/subtitle_primary"
        style="@style/T18DimGrayMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/module_55"
        android:layout_marginEnd="@dimen/module_5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/subtitle_secondary"
        app:layout_constraintTop_toBottomOf="@id/title"
        tools:text="Already have an account?" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/subtitle_secondary"
        style="@style/T18RadicalRedMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/module_55"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toEndOf="@id/subtitle_primary"
        app:layout_constraintTop_toBottomOf="@id/title"
        tools:text="Sign In" />

</androidx.constraintlayout.widget.ConstraintLayout>