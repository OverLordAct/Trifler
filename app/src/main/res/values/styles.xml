    <style name="RoundedBaseButton">
        <item name="cornerRadius">999dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="OnboardingMainButton" parent="RoundedBaseButton">
        <item name="android:textSize">18sp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="RoundedFilledButton" parent="RoundedBaseButton">
        <item name="android:textSize">18sp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="SignInOutHeaderButton" parent="RoundedBaseButton">
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="OnboardedDashboardPrimaryButton" parent="RoundedBaseButton">
        <item name="android:textSize">20sp</item>
        <item name="android:paddingVertical" tools:targetApi="o">@dimen/module_15</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">@dimen/module_20</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:background">@drawable/background_corner</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="dotsStyle">
        <item name="dotsColor">@color/radicalred</item>
        <item name="dotsStrokeColor">@color/dimgray</item>
        <item name="dotsCornerRadius">10dp</item>
        <item name="dotsSize">12dp</item>
        <item name="dotsSpacing">3dp</item>
        <item name="dotsWidthFactor">2.5</item>
        <item name="dotsStrokeWidth">2dp</item>
        <item name="progressMode">true</item>
    </style>

    <style name="Widget.Button.Skip" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/gainsboro</item>
    </style>

    <style name="HintTextAppearance" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColorHint">@color/radicalred</item>
    </style>

    <!--    For outlined edit text layour with custom font-->
    <style name="TextInputLayout.OutlineBox.CustomFont" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:theme">@style/ThemeOverlay.TextInputEditText.OutlinedBox.CustomFont
        </item>
    </style>

    <style name="ThemeOverlay.TextInputEditText.OutlinedBox.CustomFont" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox">
