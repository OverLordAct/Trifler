    </style>

    <style name="TextInputEditText.OutlinedBox.CustomFont" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <!--     For filled edit text with custom font-->
    <style name="TextInputLayout.FilledBox.CustomFont" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:theme">@style/ThemeOverlay.TextInputEditText.FilledBox.CustomFont</item>
        <item name="android:textColorHint">@color/nobel</item>
        <item name="boxBackgroundColor">@color/whitesmoke</item>
        <item name="hintTextColor">@color/nobel</item>
        <item name="boxCornerRadiusBottomEnd">5dp</item>
        <item name="boxCornerRadiusBottomStart">5dp</item>
        <item name="boxCornerRadiusTopEnd">5dp</item>
        <item name="boxCornerRadiusTopStart">5dp</item>
    </style>

    <style name="ThemeOverlay.TextInputEditText.FilledBox.CustomFont" parent="ThemeOverlay.MaterialComponents.TextInputEditText.FilledBox">
        <item name="editTextStyle">@style/TextInputEditText.FilledBox.CustomFont</item>
    </style>

    <style name="TextInputEditText.FilledBox.CustomFont" parent="Widget.MaterialComponents.TextInputEditText.FilledBox">
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

