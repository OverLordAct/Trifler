<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Trifler" parent="Theme.Trifler.Base">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/radicalred</item>
        <item name="colorPrimaryVariant">@color/charcoal</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="colorOnSurface">@color/darkgray</item>
        <item name="materialButtonStyle">@style/Widget.Trifler.ButtonBaseStyle</item>
        <item name="toolbarStyle">@style/Widget.Trifler.BaseToolbar</item>
    </style>

    <!-- Base Theme -->
    <style name="Theme.Trifler.Base" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor" tools:ignore="NewApi">?attr/colorPrimary</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <item name="android:navigationBarColor" tools:ignore="NewApi">?android:attr/colorPrimary
        </item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">true</item>
        <item name="android:navigationBarDividerColor" tools:ignore="NewApi">?attr/colorPrimary
        </item>
        <item name="android:indeterminateTint">@color/radicalred</item>
    </style>

    <!-- Base Button Theme -->
    <style name="Widget.Trifler.ButtonBaseStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:minHeight">0dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0.0</item>
    </style>

    <!-- Base Checkbox Theme -->
    <style name="Widget.Trifler.CustomCheckBox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="materialThemeOverlay">@style/Checkbox</item>
    </style>

    <!-- Base Toolbar Theme -->
    <style name="Widget.Trifler.BaseToolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="titleMarginStart">0dp</item>
        <item name="contentInsetStart">0dp</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.FragmentNavSample.Toolbar</item>
    </style>

    <style name="ThemeOverlay.FragmentNavSample.Toolbar" parent="">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>
</resources>